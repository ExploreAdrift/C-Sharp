<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    @model User
    <h1>Register</h1>
    <div class="container">
        <form asp-action="Register" asp-controller="Home" method="POST">
            <div class="d-flex mb-4 mt-5">
                <span asp-validation-for="FirstName"></span>
                <label asp-for="FirstName" class="form-label"></label>
                <input name="FirstName" class="form-control" asp-for="FirstName">
            </div>
            <div class="d-flex mb-4">
                <span asp-validation-for="LastName"></span>
                <label asp-for="LastName" class="form-label"></label>
                <input name="LastName" class="form-control" asp-for="LastName">
            </div>
            <div class="d-flex mb-4">
                <span asp-validation-for="Email"></span>
                <label asp-for="Email" class="form-label"></label>
                <input name="Email" class="form-control" asp-for="Email">
            </div>
            <div>

                <div>
                    <span asp-validation-for="Password"></span>
                    <label asp-for="Password"></label>
                    <input class="form-control" asp-for="Password">
                </div>
                <div>
                    <span asp-validation-for="Confirm"></span>
                    <label asp-for="Confirm"></label>
                    <input name="Confirm" class="form-control" asp-for="Confirm">
                </div>
                <button id="submit" class="btn btn-success mt-4" value="Register" type="submit">SUBMIT!</button>
            </div>
        </form>


    </div>

</body>

</html>
