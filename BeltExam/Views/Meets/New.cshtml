@model MeetUp
<h1>Create a Meetup!</h1>
<div class="container">
    <form asp-action="Create" asp-controller="Meets" method="POST">
        <div class="d-flex mb-4 mt-5">
            <span asp-validation-for="Title"></span>
            <label asp-for="Title" class="form-label"></label>
            <input class="form-control" asp-for="Title">
        </div>
        <div class="d-flex mb-4">
            <span asp-validation-for="Date"></span>
            <label asp-for="Date" class="form-label"></label>
            <input class="form-control" asp-for="Date" type="date">
        </div>
        <div class="d-flex mb-4">
            <span asp-validation-for="Duration"></span>
            <label asp-for="Duration" class="form-label"></label>
            <input type="text" class="form-control" asp-for="Duration">
            <select class="form-control" asp-for="Duration">
                <option>MINUTES</option>
                <option>HOURS</option>
                <option>DAYS</option>
            </select>
        </div>
        <div>
            <span asp-validation-for="Description"></span>
            <label asp-for="Description"></label>
            <input class="form-control" asp-for="Description">
        </div>

        <button id="submit" class="btn btn-success mt-4" value="Create" type="submit">SUBMIT!</button>

    </form>
