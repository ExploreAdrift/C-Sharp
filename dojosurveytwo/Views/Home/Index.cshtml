<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Index</title>
</head>

<body>
    @model dojosurveytwo.Models.ResultsSurvey

    <div class="container">
        <form action="/results" method="post" asp-validation-for="Submit">
            <div class="d-flex mb-4 mt-5">
                <span asp-validation-for="Name"></span>
                <label asp-for="Name">Your Name: </label>
                <input type="text" name="Name" class="form-control" asp-for="Name">
            </div>
            <div class="d-flex mb-4">
                <span asp-validation-for="Location"></span>
                <label asp-for="Location">Dojo Location: </label>
                <input type="text" name="Location" class="form-control" asp-for="Location">
            </div>
            <div class="d-flex mb-4">
                <span asp-validation-for="Language"></span>
                <label asp-for="Language">Favorite Language: </label>
                <select name="Language" id="language" class="form-control" asp-for="Language">
                    <option value="C#">C#</option>
                </select>
            </div>
            <div>
                <span asp-validation-for="Comment"></span>
                <label asp-for="Comment">Comment (optional): </label>
                <textarea type="text" name="Comment" class="form-control" asp-for="Comment"></textarea>
            </div>
            <button id="submit" class="btn btn-success mt-4" type="submit">SUBMIT!</button>
        </form>
    </div>


</body>

</html>