@model Product

<form asp-action="Products" asp-controller="Home" method="POST">
    <div class="d-flex mb-4 mt-5" class="form-group">
        <span asp-validation-for="Name"></span>
        <label asp-for="Name"></label>
        <input name="Name" class="form-control" asp-for="Name">
    </div>
    <div class="d-flex mb-4" class="form-group">
        <span asp-validation-for="Description"></span>
        <label asp-for="Description"></label>
        <textarea type="text" name="Description" class="form-control" asp-for="Description"></textarea>
    </div>
    <div class="form-group">
        <span asp-validation-for="Price"></span>
        <label asp-for="Price"></label>
        <input class="form-control" asp-for="Price" type="text"></input>
    </div>



    <button id="submit" class="btn btn-success mt-4" type="submit">SUBMIT!</button>

</form>